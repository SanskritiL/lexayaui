{
  "version": 2,
  "cleanUrls": true,
  "rewrites": [
    { "source": "/kit/:token", "destination": "/kit/index.html" }
  ],
  "functions": {
    "api/broadcast/publish.js": {
      "maxDuration": 60
    },
    "api/broadcast/init-video.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/broadcast/cron/process-scheduled",
      "schedule": "0 0 * * *"
    }
  ]
}
